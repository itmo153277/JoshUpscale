root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cc,cc.cu,h,hh}]
tab_width = 4
indent_size = 4
indent_style = unset

[*.py]
tab_width = 2
indent_size = 2
indent_style = unset

[*.bat]
end_of_line = crlf
