{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "joshupscale",
  "version-semver": "1.0.0",
  "dependencies": [
    "yaml-cpp",
    "boost-iostreams"
  ],
  "features": {
    "avisynth-plugin": {
      "description": "AviSynth plugin",
      "dependencies": [
        "avisynthplus"
      ],
      "supports": "windows"
    },
    "obs-plugin": {
      "description": "OBS plugin",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": [
            "swscale"
          ]
        }
      ]
    }
  }
}